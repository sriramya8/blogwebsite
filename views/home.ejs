<%- include("./partials/header") -%>
<h1>Home</h1>
<p><%=start%></p>

<% for(var i=0;i<arr.length;i++) { %>
    <div class="container-fluid">
        <h1>  <%=arr[i].title %></h1>
       <% if(arr[i].post.length>100){ %>
            <p><%=arr[i].post.substring(0,100)+"..."%> <a href="/posts/<%=arr[i].title %>"> Read more </a></p>
       <% } else{ %>
            <p><%=arr[i].post%></p>
        <% } %>
        

    </div>
       
<%}%>

<%- include("./partials/footer") -%>